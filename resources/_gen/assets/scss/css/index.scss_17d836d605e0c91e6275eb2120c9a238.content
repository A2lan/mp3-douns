*,*::after,*::after{margin:0;padding:0;box-sizing:border-box;font:inherit}body{font-family:sans-serif;background-color:#101010;color:#fff;padding-bottom:120px}ul,li{list-style:none}.header{height:70px;margin-bottom:2.5rem;position:relative}.header__svg{position:absolute;left:0;right:0;top:0;z-index:-1;width:100%;height:100%}.header__container{display:flex;justify-content:space-between;align-items:center;height:100%}.header__btn{background-color:#be185d;padding:.5rem 1rem;border-radius:9999px;border:none;color:#fff;font-size:.875rem;display:flex;gap:.5rem;align-items:center}.track{padding-block:1.5rem}.track:not(:last-child){border-bottom:1px solid #1a1a1a}.track__info{display:flex;justify-content:space-between;align-items:center}.track__info__left{display:flex;gap:2rem;align-items:center}.track__info__num{color:#6f6f6f}.track__info__title{font-size:1.125rem}.controls{height:120px;position:fixed;left:0;right:0;bottom:0;background-color:rgba(16,16,16,.9333333333);backdrop-filter:blur(3px)}.controls__content{display:flex;flex-direction:column;justify-content:center;padding-block:1.5rem;align-items:center;height:100%}.progress{height:7px;width:100%;background-color:#858585}.progress__bar{background-color:#be185d;height:100%;width:0}.controls__btns{display:flex;justify-content:space-between;align-items:center;width:100%}.controls__btns__center{display:flex;align-items:center;gap:1rem}.controls__btns__center__circle{background-color:#be185d;padding:1rem;border-radius:9999px;display:flex}.btn-active{color:#be185d}.modal{height:100%;display:none;background-color:rgba(16,16,16,.9333333333);backdrop-filter:blur(3px);padding-bottom:calc(120px + 2rem);padding-top:70px;overflow-y:scroll}.active{position:fixed;inset:0;display:block}.lyrics{line-height:1.4}.lyrics>h1{font-size:2.25rem;margin-bottom:3.5rem;letter-spacing:-.05rem;font-weight:500}.lyrics>p:not(:last-child){margin-bottom:2rem}.lyrics h2{font-weight:500;display:block;margin-bottom:.5rem;font-size:.75rem;color:#be185d;t